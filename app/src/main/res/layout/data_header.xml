<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/header"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:orientation="vertical">

    <ir.ipack.ehsan.local.ipack.views.RobotoTextView
        android:id="@+id/divider_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/header_bottom_margin"
        android:layout_marginLeft="@dimen/layout_left_margin"
        android:layout_marginStart="@dimen/layout_right_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:text="@string/current_cycle_header"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/header_size"
        app:font="@string/roboto_medium"
        />

</LinearLayout>